<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue">

    <!-- 1. Imagem da Notícia (Cabeçalho) -->
    <ImageView
        android:id="@+id/ivNoticiaHeader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E6E1F0"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <!-- 2. Barra de Pesquisa (Mantida para consistência do design) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPesquisa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusTopStart="28dp"
        app:boxStrokeColor="@color/blue_primary"
        app:boxStrokeWidth="2dp"
        app:startIconDrawable="@drawable/ic_pesquisa"
        app:startIconTint="@color/blue_primary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_perfil"
        app:endIconTint="@color/blue_primary"
        app:hintEnabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@color/white"
        android:fitsSystemWindows="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3. Conteúdo da Notícia (Card Branco com sobreposição) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/ivNoticiaHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:padding="24dp">

            <!-- Data de Publicação -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="@android:color/darker_gray"
                    android:layout_marginEnd="4dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvDataPublicacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Out 2023"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Título da Notícia -->
            <TextView
                android:id="@+id/tvTituloNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restauração do Palácio da Pena concluída com sucesso"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Separador decorativo (opcional) -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/blue_primary"
                android:layout_marginBottom="16dp"/>

            <!-- Conteúdo / Corpo da Notícia -->
            <TextView
                android:id="@+id/tvConteudoNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Após meses de trabalho intensivo, as obras de restauração na fachada norte do Palácio da Pena foram finalmente concluídas. \n\nOs visitantes podem agora apreciar as cores vibrantes originais que caracterizam este monumento icónico de Sintra. A intervenção incluiu a limpeza da pedra, reparação de rebocos e a pintura com materiais tradicionais para garantir a durabilidade.\n\nO parque envolvente também recebeu melhorias nos caminhos pedonais para facilitar o acesso."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#333333"
                android:justificationMode="inter_word" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
